/* pages/recommend/recommend.wxss */
/*网页背景灰色*/
page{
  background-color: #f1f1f1;
}
/*卡片区域块中布局*/
.card{
  /*背景 边框 补丁 布局方式*/
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx; /*圆角*/
  margin: 60rpx 20rpx; /*补丁*/
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
/*标题*/
.card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
}
/*日期 下划线*/
.card-date{
  font-size: 14px;
  color: #cccccc;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #cccccc;
}
.card-image{
  width: 100%;
  height: 300rpx;
}
.card-desc{
  padding: 20rpx 0;
  color: #333;
  border-bottom: 1rpx solid #ccc;
}
.card-read{
  padding-top: 20rpx;
  color: #666;
  font-size: 16px;
}
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #666;
  border-right: 3rpx solid #666;
  transform: rotate(45deg);
}